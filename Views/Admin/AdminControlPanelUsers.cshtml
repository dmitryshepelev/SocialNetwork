@model IEnumerable<SocialNetwork.Models.AdminControlPanelUsersViewModel>
@{
    ViewBag.Title = "AdminControlPanelUsers";
}

<h2>AdminControlPanelUsers</h2>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>User name</th>
            <th>E-mail</th>
            <th>Tasks</th>
            <th>Attempt</th>
            <th>Solutions</th>
            <th>Rate</th>
            <th>Block</th>
            <th>Lockout end date</th>
            <th>Manage</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            foreach (var user in Model)
            {
                <tr id="row-@i">
                    @*<input type="hidden" value="@user.Id" />*@
                    <td>@Html.ActionLink(user.UserName, "ViewAccount", "Account", new { id = user.Id }, null)</td>
                    <td>@user.Email</td>
                    <td align="center">@user.TaskAmount</td>
                    <td align="center">@user.AttemptAmount</td>
                    <td align="center">@user.SolutionAmount</td>
                    <td align="center">@user.UserRate</td>
                    <td align="center"><input type="checkbox" id="checkbox-@i" value="@user.LockoutEnabled" /></td>
                    <td>@user.LockoutEndDateUtc</td>
                    <td>@Html.ActionLink("Delete", "AccountDelete", "Account", new { id = user.Id }, htmlAttributes: null)</td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>