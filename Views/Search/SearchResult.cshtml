<div class="row">
    <h3>Search results</h3>
    <div class="col-md-4">
        <h2>Users</h2>
        @if (Model.Users.Count() != 0)
    {
                <h4>@SocialNetwork.Resources.Resource.SearchResultUsers</h4>
                <br />
                foreach (var userTask in Model.Users)
                {
                    @Html.ActionLink(userTask.UserName, "ViewAccount", "Account", new { id = userTask.Id }, new { @style = "color:dodgerblue;" })
                    <br />
                }
        }
        else
        {
                    <h4>@SocialNetwork.Resources.Resource.NotFound</h4>
                    <br />
        }
    </div>
    <div class="col-md-4">
        <h2>Tasks</h2>
        @if (Model.Tasks.Count() != 0)
        {
            <h4>@SocialNetwork.Resources.Resource.SearchResult</h4>
            <br />
            foreach (var userTask in Model.Tasks)
            {
                @Html.ActionLink(userTask.UserTaskTitle, "ViewTask", "UserTask", new { id = userTask.Id }, new { @style = "color:dodgerblue;" })
                <br />
            }
        }
        else
        {
            <h4>@SocialNetwork.Resources.Resource.NotFound</h4>
            <br />
        }
    </div>
</div>