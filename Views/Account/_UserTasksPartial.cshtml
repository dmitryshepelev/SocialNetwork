@using System.Globalization
@using SocialNetwork.Models
@using SocialNetwork.Resources
@model ViewAccountViewModel

<div class="row">
    <div class="col-md-6">
        <h4>@Resource.UserMyTasks</h4>
        @if (Model.UserTasks.Count() == 0)
        {
            <p class="text-muted">@Resource.UserEmptyTaskList</p>
        }
        else
        {
            <table class="table table-striped table-hover">
                <tbody id="tableBody">
                    @foreach (UserTaskModel userTask in Model.UserTasks)
                    {
                        <tr>
                            <td width="80%">@Html.ActionLink(userTask.UserTaskTitle, "ViewTask", "UserTask", new { id = userTask.Id })</td>
                            <td width="10%">@userTask.DateAdded.ToString("d", CultureInfo.CreateSpecificCulture("en-US"))</td>
                            @if (User.Identity.Name == Model.UserName)
                            {
                                <td width="5%"><a href="~/UserTask/ChangeTask?id=@userTask.Id"><img src="~/Content/images/edit-icon-16.png" /></a></td>
                                <td width="5%"><a href="~/UserTask/BlockTask?id=@userTask.Id"><img src="~/Content/images/block-icon-16.png" /></a></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    <div class="col-md-6">
        <h4>@Resource.UserMySolutions</h4>
        @if (Model.UserSolvedTasks.Count() == 0)
        {
            <p class="text-muted">@Resource.UserEmplySolutionList</p>
        }
        else
        {
            <table class="table table-striped table-hover">
                <tbody>
                    @foreach (UserTaskModel userTask in Model.UserSolvedTasks)
                    {
                        <tr>
                            <td>@userTask.UserTaskTitle</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>