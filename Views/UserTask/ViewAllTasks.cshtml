@model List<SocialNetwork.Models.UserTasksViewAllModel>
@{
    ViewBag.Title = "ViewAllTasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .task-stat {
        padding: 0 0 0 0;
    }
</style>

<div style="z-index: 1030; top: 63px; position: fixed; width: inherit">
    <div class="row">
        <div class="col-lg-2">
            <p style="font-size: 26px">Tasks</p>
        </div>
        <div class="col-lg-8" align="center">
            <div class="btn-group">
                @Html.ActionLink("recent", "ViewAllTasks", "UserTask", new { sortParam = "DateAdded", sortOrder = ViewBag.SortOrder }, new { @class = "btn btn-default" })
                @Html.ActionLink("popular", "ViewAllTasks", "UserTask", new { sortParam = "LikeAmount", sortOrder = ViewBag.SortOrder }, new { @class = "btn btn-default" })
                @Html.ActionLink("solutions", "ViewAllTasks", "UserTask", new { sortParam = "SolutionAmount", sortOrder = ViewBag.SortOrder }, new { @class = "btn btn-default" })
                @Html.ActionLink("comments", "ViewAllTasks", "UserTask", new { sortParam = "CommentAmount", sortOrder = ViewBag.SortOrder }, new { @class = "btn btn-default" })
            </div>
        </div>
        <div class="col-lg-2">
            <div class="pull-right">
                @Html.ActionLink("Propose task", "CreateTask", "UserTask", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>

<div style="margin-top: 50px">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div id="accordion">
            <hr />
            <div>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="row">
                            <div class="col-md-3">

                            </div>
                            <div class="col-md-3 task-stat" align="center">
                                <h3>@Html.DisplayFor(x => x[i].LikesAmount)</h3>
                                <h6>Likes</h6>
                            </div>
                            <div class="col-md-3 task-stat" align="center">
                                <h3>@Html.DisplayFor(x => x[i].SolutionsAmount)</h3>
                                <h6>Solutions</h6>
                            </div>
                            <div class="col-md-3 task-stat" align="center">
                                <h3>@Html.DisplayFor(x => x[i].CommentsAmount)</h3>
                                <h6>Comments</h6>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-9" style="padding-left: 5%">
                        <h3>
                            @Html.ActionLink(Model[i].UserTaskTitle, "ViewTask", "UserTask", new { id = Model[i].Id }, null)
                            <div class="pull-right">
                                @Html.ActionLink(Model[i].Category, "ViewAllTasks", "UserTask", new { id = Model[i].Category }, null)
                            </div>
                        </h3>
                        <div class="pull-left">
                            @foreach (var tag in Model[i].Tags)
                            {
                                <span class="label label-info">@tag.TagName</span>
                            }
                        </div>
                        <div class="pull-right">
                            by @Html.ActionLink(Model[i].UserName, "ViewAccount", "Account", new { id = Model[i].UserName }, null)
                            @Model[i].DateAdded
                        </div>
                    </div>
                </div>
                <div align="center">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapse-@i">details</a>
                </div>
            </div>
            <div class="row panel-collapse collapse" id="collapse-@i">
                <div class="col-lg-3">

                </div>
                <div class="col-lg-9">
                    <blockquote style="font-size: 16px">
                        <p>@Model[i].Content</p>
                        <small>@Html.ActionLink("view more", "ViewTask", "UserTask", new { id = Model[i].Id }, null)</small>
                    </blockquote>
                </div>
            </div>
        </div>
    }
</div>