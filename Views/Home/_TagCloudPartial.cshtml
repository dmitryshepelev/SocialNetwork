@model List<SocialNetwork.Models.TagCloudModel>

<script>
    $(document).ready(function () {
        //$.fn.tagcloud.defaults = {
        //    size: { start: 14, end: 18, unit: 'pt' },
        //    color: { start: '#cde', end: '#f52' }
        //};

        $("#tagcloud a").tagcloud({
            size: {
                start: 10,
                end: 25,
                unit: 'px'
            },
            color: {
                start: "#CDE",
                end: "#FS2"
            }
        });
    })
</script>

<div id="tagcloud">
    @foreach (var tag in Model)
    {
        @Html.ActionLink(tag.TagName + " ", "ViewAllTasks", "UserTask", new { filterParam = "Tag", filterName = tag.TagName }, new { rel = tag.TagFrequency })
    }
</div>